<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Daftar Barang</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    {{> header }}
    <style>

    </style>

</head>

<body>
    {{> navbar }}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="row">

                    <div class="span5">
                        <div id="alert" class="alert hide">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong id="pesan_teks"></strong>
                        </div>
                        <div class="widget widget-nopad">
                            <div class="widget-header"> <i class="icon-file"></i>
                                <h3> Input Barang</h3>
                            </div>
                            <!-- /widget-header -->
                            <div class="widget-content">
                                <div class="widget big-stats-container">
                                    <div class="widget-content">
                                        <fieldset>
                                            <form action="" id="form_barang" method="POST"
                                                class="form-vertical input-barang">
                                                <div class="control-group">
                                                    <label class="control-label" for="code_barang">Code Barang</label>
                                                    <div class="controls">
                                                        <input type="text" id="code_barang" name="code_barang" required>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="nama_barang">Nama Barang</label>
                                                    <div class="controls">
                                                        <input type="text" class="span4" id="nama_barang"
                                                            name="nama_barang" required>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="harga_beli">Harga Beli</label>
                                                    <div class="controls">
                                                        <input type="text" class="span4" id="harga_beli"
                                                            name="harga_beli" required>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="harga_barang">Harga Barang</label>
                                                    <div class="controls">
                                                        <input type="text" class="span4" id="harga_barang"
                                                            name="harga_barang" required>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="merk_barang">Merek Barang</label>
                                                    <div class="controls">
                                                        <input type="text" class="span4" id="merk_barang"
                                                            name="merk_barang" required>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="stock_barang">Stock</label>
                                                    <div class="controls">
                                                        <input type="text" class="span4" id="stock_barang"
                                                            name="stock_barang" required>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="expire">Expire</label>
                                                    <div class="controls">
                                                        <input type="date" class="span3" id="expire" name="expire"
                                                            required>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group" id="button_group">
                                                    <button type="button" id="save_barang"
                                                        class="btn btn-primary">Save</button>
                                                    <button type="button" id="reset"
                                                        class="btn btn-success">Reset</button>
                                                </div> <!-- /control-group -->
                                                <input type="hidden" class="span3" id="id_barang" name="id_barang">
                                            </form>
                                        </fieldset>
                                    </div>
                                    <!-- /widget-content -->

                                </div>
                            </div>
                        </div>
                        <!-- /widget -->
                    </div>
                    <!-- /span6 -->

                    <div class="span7">

                        <div class="justify-content-center">
                            {{!-- show message error atau success --}}
                            {{#if message.success}}
                            <div class="alert alert-success mt-5" role="alert">{{message.success}}</div>
                            {{/if}}
                            {{#if message.error}}
                            <div class="alert alert-danger mt-5" role="alert">{{message.error}}</div>
                            {{/if}}
                        </div>

                        <div id="alert-tabel" class="alert hide">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong id="message"></strong>
                        </div>
                        <div class="widget widget-table action-table">
                            <div class="widget-header"> <i class="icon-th-list"></i>
                                <h3>Tabel Barang</h3>
                            </div>
                            <!-- /widget-header -->
                            <div class="widget-content" id="div-tabel">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th> Code Barang </th>
                                            <th> Nama Barang</th>
                                            <th> Stock</th>
                                            <th> Expire Date</th>
                                            <th> </th>
                                        </tr>
                                    </thead>
                                    <tbody id="tb_body">
                                        {{#each results}}
                                        <tr>
                                            <td>{{ code_barang }}</td>
                                            <td>{{ nama_barang }}</td>
                                            <td>{{ stock }}</td>
                                            <td>{{ expire }}</td>
                                            <td>
                                                <a href="" id="edit" data-id="{{code_barang}}"
                                                    class="btn btn-small btn-success"><i class="btn-icon-only icon-ok">
                                                    </i></a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /widget-content -->
                        </div>
                        <!-- /widget -->
                    </div>
                    <!-- /span6 -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /main-inner -->
    </div>
    <!-- /main -->

    {{> footer }}
    <script src="/assets/js/barang/index.js"></script>
</body>

</html>