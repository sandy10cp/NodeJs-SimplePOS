<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Users</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    {{> header }}
    <style>

    </style>

</head>

<body>
    {{> navbar }}

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="row">

                    <div class="span5">
                        <div id="alert_input_user" class="alert hide">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong id="pesan_input_user"></strong>
                        </div>
                        <div class="widget widget-nopad">
                            <div class="widget-header"> <i class="icon-file"></i>
                                <h3> Input User</h3>
                            </div>
                            <!-- /widget-header -->
                            <div class="widget-content">
                                <div class="widget big-stats-container">
                                    <div class="widget-content">
                                        <fieldset>
                                            <form action="../server/save_user.php" id="form_barang" method="POST"
                                                class="form-vertical input-barang">
                                                <div class="control-group">
                                                    <label class="control-label" for="username">Username</label>
                                                    <div class="controls">
                                                        <input type="text" id="username" name="username">
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="password">Password</label>
                                                    <div class="controls">
                                                        <input type="password" class="span4" id="password"
                                                            name="password">
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="nama_user">Nama user</label>
                                                    <div class="controls">
                                                        <input type="text" class="span4" id="nama_user"
                                                            name="nama_user">
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label" for="level">Level</label>
                                                    <div class="controls">
                                                        <select id="level" name="level" class="span2">
                                                            <option value="operation">Operation</option>
                                                            <option value="kasir">Kasir</option>
                                                            <option value="admin">Admin</option>
                                                        </select>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <label class="control-label">Status</label>
                                                    <div class="controls">
                                                        <label class="radio inline">
                                                            <input type="radio" name="status" value="active"
                                                                checked>Active
                                                        </label>

                                                        <label class="radio inline">
                                                            <input type="radio" name="status" value="inactive"> Inactive
                                                        </label>
                                                    </div> <!-- /controls -->
                                                </div> <!-- /control-group -->

                                                <div class="control-group">
                                                    <button type="button" id="save_user"
                                                        class="btn btn-primary">Save</button>
                                                    <button type="button" id="reset"
                                                        class="btn btn-success">Reset</button>
                                                </div> <!-- /control-group -->
                                            </form>
                                        </fieldset>
                                    </div>
                                    <!-- /widget-content -->

                                </div>
                            </div>
                        </div>
                        <!-- /widget -->
                    </div>
                    <!-- /span6 -->

                    <div class="span7">
                        <div id="alert-tabel" class="alert hide">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong id="message"></strong>
                        </div>
                        <div class="widget widget-table action-table">
                            <div class="widget-header"> <i class="icon-th-list"></i>
                                <h3>Tabel Users</h3>
                            </div>
                            <!-- /widget-header -->
                            <div class="widget-content" id="div-tabel">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th> Username </th>
                                            <th> Nama User</th>
                                            <th> Level</th>
                                            <th> Status</th>
                                            <th class="td-actions"> </th>
                                        </tr>
                                    </thead>
                                    <tbody id="tb_user">
                                        {{#each results}}
                                        <tr>
                                            <td>{{username}}</td>
                                            <td>{{nama_user}}</td>
                                            <td>{{level}}</td>
                                            <td>{{status}}</td>
                                            <td>
                                                <a href="#" class="btn btn-small btn-success edit-user"><i
                                                        class="btn-icon-only icon-ok"> </i></a>
                                                <a href="#" class="btn btn-danger btn-small btn-delete"><i
                                                        class="btn-icon-only icon-remove"> </i></a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /widget-content -->
                        </div>
                        <!-- /widget -->
                    </div>
                    <!-- /span6 -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /main-inner -->
    </div>
    <!-- /main -->

    {{> footer }}
    <script src="/assets/js/users/index.js"></script>
</body>

</html>